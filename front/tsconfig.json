{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports":true, 
      "moduleResolution": "node",
      "typeRoots": ["./src/@types", "./node_modules/@types"],
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }